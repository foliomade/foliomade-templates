---
// 404 page for DevPortfolio template
export const prerender = false;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>404 — Page Not Found</title>
    <meta name="description" content="The page you requested could not be found." />
    <style>
      :root { font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, Apple Color Emoji, Segoe UI Emoji; }
      body { margin: 0; color: #e5e7eb; background: radial-gradient(1200px 800px at 50% -10%, #0b1220 0%, #0b0f1a 45%, #0a0a0a 100%); line-height: 1.6; }
      a { color: #22c55e; text-decoration: none }
      .wrap { min-height: 100vh; display:grid; place-items:center; padding: 24px; }
      .card { text-align:center; max-width: 860px; }
      h1 { margin: 10px 0 4px; font-size: clamp(2rem, 5vw, 3.25rem); letter-spacing: -0.01em; font-weight: 800; }
      p { color:#94a3b8; margin: 10px 0; font-size: 1.025rem; }
      .img { display:block; margin: 0 auto 12px; width: min(600px, 92vw); height: auto; filter: drop-shadow(0 10px 40px rgba(34,197,94,.35)); }
      .row { display:flex; gap: 12px; justify-content:center; flex-wrap:wrap; margin-top: 18px; }
      .btn { display:inline-block; padding: 11px 16px; border-radius: 12px; font-weight: 700; font-size: 14px; }
      .primary { background: #22c55e; color: white; box-shadow: 0 6px 22px rgba(34,197,94,.35); }
      .secondary { color:#e5e7eb; border:1px solid rgba(148,163,184,.35); background-color: rgba(255,255,255,.06); }
      .tag { display:inline-block; padding:6px 12px; border-radius:999px; background: rgba(34,197,94,.12); color:#34d399; font-weight:600; font-size:12px; letter-spacing:.04em; border:1px solid rgba(34,197,94,.25); }
      footer { margin-top: 26px; color:#94a3b8; font-size: 13px; }
    </style>
  </head>
  <body>
    <main class="wrap">
      <section class="card">
        <img src="/assets/falling.png" alt="Lost astronaut falling" class="img" width="1120" height="700" loading="lazy" />
        <div class="tag">404 — Page Not Found</div>
        <h1>This page took a wrong turn.</h1>
        <p>
          No worries — you can spin up a beautiful developer portfolio from your resume in minutes.
        </p>
        <div class="row">
          <a class="btn primary" href="/">Create a portfolio using your resume</a>
          <a class="btn secondary" href="/">Go back home</a>
        </div>
        <footer>
          Built with <a href="/" rel="noopener">Foliomade</a>. Showcase your work with a polished, fast, and embeddable portfolio.
        </footer>
      </section>
    </main>
  </body>
  </html>

