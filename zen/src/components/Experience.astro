---
import Section from "./Section.astro";
const { siteConfig } = Astro.props as { siteConfig: import('../../../_shared/config').PortfolioSiteConfig };
---

<Section text="Work Experience" href="experience">
  {
    siteConfig.experience.map(({ company, title, dateRange, bullets, techStack }) => (
      <div class="mb-10">
        <h3 class="mb-1.5 font-serif text-2xl font-semibold text-[var(--text)]">
          {company}
        </h3>
        <div class="flex flex-col items-start pb-5">
          <h4 class="mb-0.5 font-serif text-2xl font-medium text-primary">
            {title}
          </h4>
          <span class="pb-[2px] text-sm text-[var(--text-70)]">
            {dateRange}
          </span>
        </div>
        {bullets && bullets.length > 0 && (
          <ul class="list-none">
            {bullets.map((log) => (
              <li class="relative mb-3 pl-8 text-base text-[var(--text-muted)] before:absolute before:top-1 before:left-0 before:content-[url(/check.svg)]">
                {log}
              </li>
            ))}
          </ul>
        )}
        {techStack && (
          <div class="mt-3 flex flex-wrap gap-2">
            {techStack
              .split(/[,|]/)
              .map((t) => t.trim())
              .filter(Boolean)
              .map((t) => (
                <span class="inline-block rounded-full bg-[var(--chip-bg)] border border-[var(--chip-border)] text-[var(--chip-text)] px-2.5 py-1 text-xs">
                  {t}
                </span>
              ))}
          </div>
        )}
      </div>
    ))
  }
</Section>
